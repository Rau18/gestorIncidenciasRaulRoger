<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/botonCreacion"
        android:layout_width="177dp"
        android:layout_height="48dp"
        android:background="#754343"
        android:onClick="btnCrear"
        android:text="Crear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnVisualizar"
        android:layout_width="186dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#009688"
        android:onClick="btnVisualizar"
        android:text="Visualizar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonCreacion" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="228dp"
        android:layout_height="109dp"
        android:layout_marginTop="44dp"
        android:text="Bones, aqui tenim la nostra app \n de gestio de incidencies \n\n\n PODEM BORRAR AQUEST \n TEXT DE EXEMPLE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>